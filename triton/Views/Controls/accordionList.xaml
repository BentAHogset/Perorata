<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="triton.Views.Controls.AccordionList">
    <ContentView.Content>
      <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
            </Grid>

            
          
            <StackLayout>
                <ListView x:Name="dynamicList" VerticalOptions="FillAndExpand">
                    <ListView.Header>
                        <StackLayout Grid.Row="0" Grid.ColumnSpan="2" BackgroundColor="White">
                            <Image Source="arrow_down" WidthRequest="14" />
                            <!--<Label x:Name="Name"  />-->
                            <Label Text="{Binding TestItems[0]}"></Label>
                        </StackLayout>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <StackLayout Grid.Row="1">
                                        <Label  Text="{Binding TextValue}"  Grid.Column="0"></Label>
                                        <Entry  Text="{Binding DataValue}" Grid.Column="1"></Entry>
                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>