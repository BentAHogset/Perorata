<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="triton.Pages.PhotoPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Photo page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Frame HasShadow="true" IsClippedToBounds="True" Padding="20" HeightRequest="245">
                <Image x:Name="image"></Image>
            </Frame>

            <Button Text="Take a picture" Clicked="TakeAPhotoAsync"></Button>
            <Button Text="Locate a picture" Clicked="GetAPhotoAsync"></Button>
            <Button Text="Save picture" Clicked="SaveAPhotoAsync"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>